<section class="header-section">
  <div class="header-title">
    <h6>
      Job Tracker
    </h6>
  </div>
</section>

<div class='dash-summary'>
  <div class='jobs-card'>
    <p>Jobs by Interest</p>
    <% @interest_scale.each do |interest, count| %>
      <li>
        <%= "#{interest} Star Jobs:" %>
        <%= "#{count}" %>
      </li>
    <% end %>
  </div>

  <div class='companies-card'>
    <p>Top Companies by Interest</p>
    <% @top_companies.each do |company| %>
      <li>
        <%= link_to company.name, company_jobs_path(company) %>
        <%= "(#{(company.average_interest / 20).round(1)} stars)" %>
      </li>
    <% end %>
  </div>
</div>

<div class="dash-locations">
  <div class="table table-hover">
    <table>
      <thead>
        <tr>
          <th>Location</th>
          <th>Number of Jobs</th>
        <tr>
      </thead>
      <tbody>
        <% @locations.each do |location, count| %>
          <tr>
            <td><%= link_to "#{location} jobs", controller: 'jobs', location: location  %></td>
            <td><%= "(#{count} jobs)" %></td>
          </tr>
        <% end %>
      <tbody>
    </table>
  </div>
</div>
